{
  "manifest_version": 2,
  "name": "適時開示速報",
  "version": "0.1.1",
  "description": "適時開示情報をデスクトップに通知する",
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options.html",
  "permissions": [
    "https://www.release.tdnet.info/",
    "notifications"
  ],
  "web_accessible_resources": [
    "notification.html",
    "notification.js",
    "lib/jquery-1.8.2.min.js",
    "options.js"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
